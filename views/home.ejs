<!-- views/home.ejs -->

<!DOCTYPE html>
<html>
<head>
    <title>My Store</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/home">Home</a>
                </li>
            
                <li class="nav-item">
                  <a class="navbar-brand" href="/products">admin</a>
                </li>
                <li class="nav-item">
                  <a class="navbar-brand" href="/about">about</a>

                </li>
            </ul>
        </div>
         
          <a class="nav-link" href="/cart">Cart</a>
      
    </nav>
    <h1 class="text-center mt-4">Our Products</h1>


    <div class="container my-4">
        <div class="row">
            <% prods.forEach(product => { %>
            <div class="col-md-3  col-sm-4">
                <div class="card">
                    <img src="<%= product.imageUrl %>" class="card-img-top" alt="<%= product.name %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= product.name %></h5>
                        <p class="card-text"><%= product.description %></p>
                        <p class="card-text"><strong>מחיר:</strong> <%= product.price %>ש"ח</p>
                        <a href="/cart/<%= product._id %>/add" class="btn ">Add to Cart</a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
    <footer class="bg-light py-3">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h5>About Us</h5>
            <p>We are a leading online store offering a wide selection of high-quality products at affordable prices.</p>
          </div>
          <div class="col-md-3">
            <h5>Navigation</h5>
            <ul class="list-unstyled">
              <li><a href="/home">Home</a></li>
              <li><a href="/about">About Us</a></li>
              <li><a href="/cart">Cart</a></li>
            </ul>
          </div>
          <div class="col-md-3">
            <h5>Contact Us</h5>
            <ul class="list-unstyled">
              <li>Email: info@mystore.com</li>
              <li>Phone: 555-1234</li>
              <li>Address: 123 Main St, Anytown USA</li>
            </ul>
          </div>
        </div>
      </div>
    </footer>
    
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</body>
</html>
