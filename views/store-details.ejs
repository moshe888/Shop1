<%- include('partials-copy/header') %>
 
<main>
 

   
   <h1><%= store.name %></h1>
 <p><%= store.description %></p>
   <h1 class="text-center mt-4">Our Products</h1>


   <div class="container my-4">
       <div class="row">
           <% store.products.forEach(product => { %>
           <div class="col-md-3  col-sm-4">
               <div class="card">
                 <div class="card">
                   <img   src="<%= product.imageUrl %>" class=" card-img-top " alt="<%= product.name %>" >
                  </div>
                   <div class="card-body">
                       <h5 class="card-title"> <a href="/home/<%= product._id %>" ><%= product.name %></h5></a>
                       <p class="card-text"><%= product.description %></p>
                       <p class="card-text"><strong>מחיר:</strong> <%= product.price %>ש"ח</p>
                       <a href="/cart/<%= product._id %>/add" class="btn ">Add to Cart</a>
                       <a href="/stores/<%= store._id%>/<%= product._id %>" class="btn btn-primary">View Details</a>

                   </div>
               </div>
           </div>
           <% }) %>
       </div>
   </div>
</main>
<%- include('partials-copy/footer') %>
