
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
<link rel="stylesheet" href="/css/produdts.css">
<a href="/home">home</a>

<h1 class="mb-4">All Products</h1>
<a href="/add-product" class="btn btn-primary mb-4">Add Product</a>
<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Image URL</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% products.forEach(product => { %>
        <tr class="narrow-row">
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td>
            <img class="card-img-top" style="height: 3cm;width: 3cm; " src="<%= product.imageUrl %>" alt="<%= product.name %>"  ">
          </td>
          <td>
            <a href="/edit-product/<%= product._id %>" class="btn btn-primary btn-sm mr-2">Edit</a>
            <form method="POST" action="/delete-product/<%= product._id %>" class="d-inline">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<style>
  .narrow-row td {
    width: 25%;
  }
</style>
